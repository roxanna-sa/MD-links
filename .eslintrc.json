{
    "parserOptions": { 
      "ecmaVersion": 2018 
    },
    "env": { 
      "es6": true, 
      "node": true, 
      "mocha": true 
    }, 
    "parser": "@babel/eslint-parser",
  
    "extends": "airbnb-base",

    "rules": {
      "import/prefer-default-export": "off",
      "no-console": "warn", 
      "no-use-before-define": "warn", 
      "spaced-comment": "warn",
      "no-trailing-spaces": "error",
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "indent": ["error", 2],
      "no-unused-expressions": "error",
      "no-await-in-loop": "error",
      "linebreak-style": ["error", "windows"],
      "import/extensions": [
          "error",
          "always"
        ]
  }

} 